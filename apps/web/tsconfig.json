{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "types": ["vite/client"],
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@premstats/ui": ["../../packages/ui/src"],
      "@premstats/ui/*": ["../../packages/ui/src/*"]
    }
  },
  "include": ["src/**/*", "vite.config.ts"],
  "exclude": ["node_modules", "dist"]
}